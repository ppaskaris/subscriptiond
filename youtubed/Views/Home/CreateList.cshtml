@model CreateListModel

@{
    ViewData["Title"] = "Create New List";
}

<h1>@ViewData["Title"]</h1>
<p><strong>Lists</strong> are anonymous subscriptions to one or more YouTube channels.</p>

<form asp-action="CreateList">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" placeholder="My List"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create List" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
